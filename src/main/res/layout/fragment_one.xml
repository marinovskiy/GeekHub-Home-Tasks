<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text_fht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edit_text_margin"
        android:layout_marginRight="@dimen/edit_text_margin"
        android:hint="@string/input_text"
        android:padding="@dimen/edit_text_padding"
        android:textSize="@dimen/text_main_size" />

    <Button
        android:id="@+id/btn_frag_one"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btn_top_margin"
        android:text="@string/set_text_btn"/>

</LinearLayout>